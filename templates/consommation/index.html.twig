{% extends 'base.html.twig' %}

{% block title %}Consommations{% endblock %}

{% block body %}
<div class="et-page-header">
    <h1 class="et-page-title">Mes consommations</h1>
    <div class="d-flex gap-2 flex-wrap">
        <a href="{{ path('app_consommation_new') }}" class="et-btn et-btn-primary">Nouvelle saisie</a>
        <a href="{{ path('app_consommation_import') }}" class="et-btn et-btn-outline">Import CSV</a>
    </div>
</div>

<div class="et-filters">
    <form method="get" class="d-flex flex-wrap align-items-end gap-3 w-100">
        <div class="et-form-group mb-0">
            <label>Type</label>
            <select name="type_energie" class="et-form-control" style="min-width: 140px;">
                <option value="">—</option>
                {% for t in types %}
                    <option value="{{ t.id }}" {{ filters.type_energie_id == t.id ? 'selected' : '' }}>{{ t.libelle }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="et-form-group mb-0">
            <label>Logement</label>
            <select name="logement" class="et-form-control" style="min-width: 180px;">
                <option value="">—</option>
                {% for l in logements %}
                    <option value="{{ l.id }}" {{ filters.logement_id == l.id ? 'selected' : '' }}>{{ l.adresse }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="et-form-group mb-0">
            <label>Période début</label>
            <input type="date" name="periode_debut" class="et-form-control" style="min-width: 140px;" value="{{ filters.periode_debut ? filters.periode_debut|date('Y-m-d') : '' }}">
        </div>
        <div class="et-form-group mb-0">
            <label>Période fin</label>
            <input type="date" name="periode_fin" class="et-form-control" style="min-width: 140px;" value="{{ filters.periode_fin ? filters.periode_fin|date('Y-m-d') : '' }}">
        </div>
        <div class="et-form-group mb-0">
            <label>Valeur min</label>
            <input type="number" name="valeur_min" class="et-form-control" style="min-width: 90px;" step="0.01" min="0" placeholder="0" value="{{ filters.valeur_min ?? '' }}">
        </div>
        <div class="et-form-group mb-0">
            <label>Valeur max</label>
            <input type="number" name="valeur_max" class="et-form-control" style="min-width: 90px;" step="0.01" min="0" placeholder="—" value="{{ filters.valeur_max ?? '' }}">
        </div>
        <button type="submit" class="et-btn et-btn-outline et-btn-sm">Filtrer</button>
        <a href="{{ path('app_consommation_index') }}" class="et-btn et-btn-secondary et-btn-sm">Réinitialiser</a>
        {% set export_params = {
            type_energie: filters.type_energie_id ?: '',
            logement: filters.logement_id ?: '',
            periode_debut: filters.periode_debut ? filters.periode_debut|date('Y-m-d') : '',
            periode_fin: filters.periode_fin ? filters.periode_fin|date('Y-m-d') : '',
            valeur_min: filters.valeur_min ?? '',
            valeur_max: filters.valeur_max ?? '',
        } %}
        <a href="{{ path('app_consommation_export', export_params|merge({format: 'csv'})) }}" class="et-btn et-btn-outline et-btn-sm">Export CSV</a>
        <a href="{{ path('app_consommation_export', export_params|merge({format: 'pdf'})) }}" class="et-btn et-btn-outline et-btn-sm" target="_blank">Export PDF</a>
    </form>
</div>

{% set query_params = {
    type_energie: filters.type_energie_id ?: '',
    logement: filters.logement_id ?: '',
    periode_debut: filters.periode_debut ? filters.periode_debut|date('Y-m-d') : '',
    periode_fin: filters.periode_fin ? filters.periode_fin|date('Y-m-d') : '',
    valeur_min: filters.valeur_min ?? '',
    valeur_max: filters.valeur_max ?? '',
} %}
<div class="et-table-wrap">
    <table class="et-table">
        <thead>
            <tr>
                <th><a href="{{ path('app_consommation_index', query_params|merge({sort: 'periodeDebut', order: sort_by == 'periodeDebut' and sort_order == 'ASC' ? 'DESC' : 'ASC'})) }}" class="et-link">Période</a></th>
                <th>Logement</th>
                <th>Type</th>
                <th><a href="{{ path('app_consommation_index', query_params|merge({sort: 'valeur', order: sort_by == 'valeur' and sort_order == 'ASC' ? 'DESC' : 'ASC'})) }}" class="et-link">Valeur</a></th>
                <th>Coût estimé</th>
                <th style="width: 160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for c in consommations %}
                <tr>
                    <td>{{ c.periodeDebut ? c.periodeDebut|date('d/m/Y') : '—' }} → {{ c.periodeFin ? c.periodeFin|date('d/m/Y') : '—' }}</td>
                    <td>{{ c.logement ? c.logement.adresse : '—' }}</td>
                    <td>{{ c.typeEnergie ? c.typeEnergie.libelle : '—' }}</td>
                    <td>{{ c.valeur|number_format(2, ',', ' ') }} {{ c.typeEnergie ? c.typeEnergie.unite : '' }}</td>
                    <td>{{ c.coutEstime is not null ? c.coutEstime|number_format(2, ',', ' ') ~ ' €' : '—' }}</td>
                    <td>
                        <div class="et-actions">
                            <a href="{{ path('app_consommation_edit', { id: c.id }) }}" class="et-btn et-btn-outline et-btn-sm">Modifier</a>
                            <form method="post" action="{{ path('app_consommation_delete', { id: c.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer cette consommation ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ c.id) }}">
                                <button type="submit" class="et-btn et-btn-danger et-btn-sm">Supprimer</button>
                            </form>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6" class="et-list-empty">Aucune consommation.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% set total_pages = (total_consommations / per_page)|round(0, 'ceil') %}
{% if total_pages > 1 %}
<nav class="mt-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
    <p class="et-text-muted small mb-0">{{ total_consommations }} résultat(s) — page {{ page }}/{{ total_pages }}</p>
    <div class="d-flex gap-1">
        {% if page > 1 %}
            <a href="{{ path('app_consommation_index', query_params|merge({page: page - 1, sort: sort_by, order: sort_order})) }}" class="et-btn et-btn-secondary et-btn-sm">Précédent</a>
        {% endif %}
        {% if page < total_pages %}
            <a href="{{ path('app_consommation_index', query_params|merge({page: page + 1, sort: sort_by, order: sort_order})) }}" class="et-btn et-btn-secondary et-btn-sm">Suivant</a>
        {% endif %}
    </div>
</nav>
{% endif %}
{% endblock %}
